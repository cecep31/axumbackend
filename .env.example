# Server Configuration
PORT=8000

# Database Configuration
# Format: postgresql://user:password@host:port/database
# Or: host=localhost user=postgres password=postgres dbname=rocketbackend
DATABASE_URL="postgresql://postgres:password@localhost:5432/rocketbackend"

# Connection Pool Configuration
# Maximum number of connections in the pool
POOL_MAX_SIZE=20

# Minimum number of connections to pre-warm at startup
# Should be less than or equal to POOL_MAX_SIZE
POOL_MIN_CONNECTIONS=2
